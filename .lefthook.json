{
  "$schema": "https://json.schemastore.org/lefthook.json",
  "pre-commit": {
    "parallel": true,
    "commands": {
      "lint": {
        "glob": "*.ts",
        "run": "pnpm exec eslint --fix {staged_files}",
        "stage_fixed": true
      },
      "format": {
        "glob": "*.{md,json,yml,ts}",
        "run": "pnpm exec prettier --write {staged_files}",
        "stage_fixed": true
      },
      "sort-package-json": {
        "glob": "{,**/}package.json",
        "run": "pnpm dlx sort-package-json {staged_files}",
        "stage_fixed": true
      }
    }
  },
  "commit-msg": {
    "commands": {
      "commitlint": {
        "run": "pnpm exec commitlint --edit {1}"
      }
    }
  }
}
